# Multithreading
alias disablesmt='echo off | sudo tee /sys/devices/system/cpu/smt/control'
alias enablesmt='echo on | sudo tee /sys/devices/system/cpu/smt/control'
alias checksmt='cat /sys/devices/system/cpu/smt/active'

